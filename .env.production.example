# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy this file to .env.production and fill in your actual values
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# ============================================
# GOOGLE SHEETS INTEGRATION
# ============================================
GOOGLE_SHEETS_ID=your-spreadsheet-id-here

# ============================================
# OPENAI API (for Alfred AI)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# JWT AUTHENTICATION SECRETS
# Generate with: openssl rand -hex 32
# ============================================
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_REFRESH_SECRET=GENERATE_WITH_OPENSSL_RAND_HEX_32

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# For production with domain
NEXT_PUBLIC_API_URL=https://dashboard.synopslabs.com/api
FRONTEND_URL=https://dashboard.synopslabs.com

# ============================================
# APPLICATION SETTINGS
# ============================================
ENVIRONMENT=production
NODE_ENV=production
DEBUG=false

# ============================================
# DOMAIN & SSL
# ============================================
DOMAIN=dashboard.synopslabs.com
