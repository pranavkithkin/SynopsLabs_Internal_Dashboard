# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to your backend directory as .env
# Fill in the values below with your actual credentials

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://synops_user:YOUR_PASSWORD_HERE@localhost:5432/synops_labs

# ============================================
# GOOGLE SHEETS INTEGRATION
# ============================================
# Your Google Sheets spreadsheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/[THIS_IS_THE_ID]/edit
GOOGLE_SHEETS_ID=

# Path to your Google service account credentials JSON file
# Example: /Users/pranav/credentials/synops-labs-sheets-credentials.json
GOOGLE_SHEETS_CREDENTIALS_PATH=

# ============================================
# OPENAI API (for Alfred AI)
# ============================================
# Your OpenAI API key (starts with sk-)
OPENAI_API_KEY=

# OpenAI model to use for Alfred
OPENAI_MODEL=gpt-4-turbo-preview

# ============================================
# JWT AUTHENTICATION
# ============================================
# Secret key for signing JWT tokens (generate a random string)
# You can generate one with: openssl rand -hex 32
JWT_SECRET=

# Secret key for refresh tokens (generate a different random string)
JWT_REFRESH_SECRET=

# JWT algorithm (keep as HS256)
JWT_ALGORITHM=HS256

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS CONFIGURATION
# ============================================
# Frontend URL (where your Next.js app runs)
FRONTEND_URL=http://localhost:3000

# ============================================
# OPTIONAL INTEGRATIONS
# ============================================

# Discord OAuth (optional - for Discord integration)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:8000/api/auth/discord/callback

# Plane.so Integration (optional - for task management)
PLANE_API_KEY=
PLANE_WORKSPACE_ID=
PLANE_API_URL=https://api.plane.so

# Google Calendar Integration (optional - for meeting scheduling)
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# WhatsApp Business API (optional - for messaging)
WHATSAPP_API_KEY=
WHATSAPP_PHONE_NUMBER_ID=

# Telegram Bot (optional - for messaging)
TELEGRAM_BOT_TOKEN=

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment (development, staging, production)
ENVIRONMENT=development

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Enable debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
